<!DOCTYPE html>




<html>
	<head>
		
	</head>
	<body>
		<h1>Modify Contact</h1>

		<form action="/contacts/<%= @contact.id %>" method="post">
			<table>
				<tr>
					<th>Please fill out this form</th>
				</tr>
				<tr>
					<td><input type="hidden" name="_method" value="put"></td>
				</tr>
				<tr>
					<td><label for="first_name">First Name</label></td>
					<td><input type="text" name="first_name" value="<%= @contact.first_name %>"></td>
				</tr>
				<tr>
					<td><label for="last_name">Last Name</label></td>
					<td><input type="text" name="last_name" value="<%= @contact.last_name %>"></td>
				</tr>
				<tr>
					<td><label for="email">Email</label></td>
					<td><input type="text" name="email" value="<%= @contact.email %>"></td>
				</tr>
				<tr>
					<td><label for="note">Note</label></td>
					<td><input type="text" name="note" value="<%= @contact.note %>"></td>
				</tr>
				<tr>
					<td></td>
					<td><input type="submit" name="Submit"></td>
				</tr>
			</table>		
		</form>
	</body>
</html>
